#!/usr/bin/env ruby1.9.1
$LOAD_PATH << File.join(File.dirname(__FILE__), 'lib')

require "menu"
require "config"
require "users"

module RLServer
  begin
    Config.load
    Dir.chdir Config.config["server"]["path"]
    #Users.load
    ENV.each_key do |k|
      case k
      when "LANG", "LANGUAGE", /\ALC_/
        ENV.delete k
      end
      ENV["LANG"] = "en_US.UTF-8" #should this be in the config?
    end
    Signal.trap "HUP" do
      Menu.destroy
      exit 1
    end
    Signal.trap "USR1" do
      Config.load
    end
    Menu.initialize
    Menu.mainmenu
  ensure
    Menu.destroy
  end
end
