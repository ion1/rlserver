$LOAD_PATH << File.join(File.dirname(__FILE__), 'lib')

require "menu"
require "config"
require "users"
require "log"

module RLServer
  begin
    Config.load
    Dir.chdir Config.config["server"]["path"]
    #Users.load
    ENV.each_key do |k|
      case k
      when "LANG", "LANGUAGE", /\ALC_/
        ENV.delete k
      end
      ENV["LANG"] = "en_US.UTF-8" #should this be in the config?
    end
    Signal.trap "USR1" do
      Config.load
    end
    Menu.initialize
    Menu.mainmenu
  rescue Exception => exc
    @log.error exc.to_formatted_string
    Menu.destroy
  ensure
    Menu.destroy
  end
end
