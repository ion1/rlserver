#!/usr/bin/env ruby

$LOAD_PATH << File.join(File.dirname(__FILE__), 'lib')

require "menu"
require "server"
require "games"
require "ui"

begin
  Dir.chdir Server::SERVER_DIR
  Menu.initialize
  Signal.trap "HUP" do
    UI.endwin
    puts "Caught HUP"
    if Games.socket != nil then
      puts "Detaching game " + Games.socket
      system "screen", "-D", Games.socket
    end
    Process.exit(1)
  end
  Menu.mainmenu
ensure
  Menu.destroy
end
