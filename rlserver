#!/usr/bin/env ruby

$LOAD_PATH << File.join(File.dirname(__FILE__), 'lib')

require "menu"
require "server"
require "games"

begin
  Dir.chdir Server::SERVER_DIR
  Server.initialize
  Menu.initialize
  Signal.trap "HUP" do
    Menu.destroy
    puts "Caught HUP"
    if Games.socket != nil then
      system "screen", "-D", Games.socket
      puts "Detaching game " + Games.socket
    end
    Process.exit!(1)
  end
  Menu.mainmenu
ensure
  Menu.destroy
end
